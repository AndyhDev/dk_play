<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dk.play.CloudSongs$PlaceholderFragment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/space_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="" />

        <com.dk.ui.widgets.ProgressBar
            android:id="@+id/free_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/space_text"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
    
	<View
    	android:layout_width="match_parent"
    	android:layout_height="2dp"
    	android:background="@color/orange"/>
	
    <ListView
        android:id="@+id/list"
	    android:divider="@color/orange"
	    android:dividerHeight="2dip"
	    android:listSelector="@drawable/songlist_select_color" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>