<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseThemeImage" parent="android:Theme.Holo.Light">

        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBarImage</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflowImage</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_select</item>
        <item name="android:popupMenuStyle">@style/PopupMenuImage</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListViewImage</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.stylingactionbar.widgetImage</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:seekBarStyle">@style/SeekBarAppThemeImage</item>
        <item name="android:ratingBarStyle">@style/RatingBarAppThemeImage</item>
        <item name="android:ratingBarStyleIndicator">@style/RatingBarBigAppThemeImage</item>
        <item name="android:ratingBarStyleSmall">@style/RatingBarSmallAppThemeImage</item>
    </style>
	
    <style name="ButtonAppThemeImage" parent="android:Widget.Button">
	  <item name="android:background">@drawable/yellow_button</item>
	  <item name="android:minHeight">48dip</item>
	  <item name="android:minWidth">64dip</item>
	  <item name="android:textColor">@color/text_disabled</item>
  </style>
  
    <style name="MyActionBarImage" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/orange</item>
        <item name="android:backgroundSplit">@color/orange</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleImage</item>
    </style>
	
    <style name="MyActionButtonOverflowImage" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
    	<item name="android:src">@drawable/ic_action_overflow_l</item>>
	</style>

    <style name="ActionBarTitleImage" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    	<item name="android:textColor">@color/white2</item>
  	</style>
  
    <style name="PopupMenuImage" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/white2</item>
    </style>

    <style name="DropDownListViewImage" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/songlist_select_color</item>
        <item name="android:divider">@color/orange</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="Theme.stylingactionbar.widgetImage" parent="@android:style/Theme.Holo.Light">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
    </style>

    <style name="SeekBarAppThemeImage" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/apptheme_scrubber_control_selector_holo_light</item>
    </style>

    <style name="RatingBarAppThemeImage" parent="android:Widget.Holo.Light.RatingBar">
        <item name="android:progressDrawable">@drawable/apptheme_ratingbar_full_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_ratingbar_full_holo_light</item>
    </style>

    <style name="RatingBarBigAppThemeImage" parent="android:Widget.Holo.Light.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/apptheme_ratingbar_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_ratingbar_holo_light</item>
    </style>

    <style name="RatingBarSmallAppThemeImage" parent="android:Widget.Holo.Light.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/apptheme_ratingbar_small_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_ratingbar_small_holo_light</item>
    </style>

    <style name="MusicRatingBaImager" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">60dip</item>
        <item name="android:maxHeight">60dip</item>
    </style>

</resources>